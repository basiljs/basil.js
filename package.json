{
  "name": "basiljs",
  "version": "1.0.10",
  "description": "An attempt to port the spirit of the Processing visualization language to Adobe InDesign.",
  "main": "basil.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle": "./node_modules/.bin/exsbundlr -i src/main.js -o basil.js -p '/* Basil.js v'${npm_package_version}' '$(date '+%Y.%m.%d-%H:%M:%S')' */'",
    "watch":"./node_modules/.bin/watch 'npm run bundle' ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basiljs/basil.js.git"
  },
  "keywords": [
    "Basil.js",
    "InDesign",
    "Processing"
  ],
